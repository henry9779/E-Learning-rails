<%= form_for [:admin, @course] do |form| %>
  <% if @course.errors.any? %>
    <div class='alert alert-danger'>
      <% @course.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class='col-12 mb-3'>
    <%= form.label :subject, class: 'form-label' %>
    <%= form.text_field :subject, class: 'form-control' %>
  </div>

  <div class='col-12 mb-3'>
    <%= form.label :category, class: 'form-label' %>
    <%= form.select :category, options_for_category, {}, class: 'form-select' %>
  </div>

  <div class='col-12 mb-3'>
    <%= form.label :status, class: 'form-label' %>
    <%= form.select :status, options_for_status, {}, class: 'form-select' %>
  </div>

  <div class='col-12 mb-3'>
    <%= form.label :valid_day, class: 'form-label' %>
    <%= form.number_field :valid_day, class: 'form-control' %>
  </div>

  <div class='col-12 mb-3'>
    <%= form.label :url, class: 'form-label' %>
    <%= form.text_field :url, class: 'form-control' %>
  </div>

  <div class='col-12 mb-3'>
    <%= form.label :currency, class: 'form-label' %>
    <%= form.select :currency, options_for_currency, {}, class: 'form-select' %>
  </div>

  <div class='col-12 mb-3'>
    <%= form.label :price, class: 'form-label' %>
    <%= form.number_field :price, min: 0, step: 0.01, class: 'form-control' %>
  </div>

  <div class='col-12 mb-3'>
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
