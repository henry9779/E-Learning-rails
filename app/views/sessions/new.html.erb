<h2 class='mt-3 mb-3'><%= t('log_in') %></h2>

<%= form_with url: log_in_path, local: true do |form| %>
  <div class='col-12 mb-3'>
    <%= form.label :email, t('label_email'), class: 'form-label' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class='col-12 mb-3'>
    <%= form.label :password, t('label_password'), class: 'form-label' %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= form.submit t('log_in'), class: 'btn btn-primary' %>
  </div>
<% end %>
